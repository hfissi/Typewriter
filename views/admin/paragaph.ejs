<% include ./header %>

  <% if(item) {%>
    <div class="main-container">
      <div class="row">
        <div class="col-md-8">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"><%= item.title %></h3>
            </div>
            <div class="panel-body">
              <p><%= item.para %></p>
              <p><%= item.size %></p>
            </div>
            <div class="panel-footer">
              <div class="options">
                <a class="btn btn-success" href="/admin/edit/<%= item._id %>">edit</a>
                <a class="btn btn-danger" href="/admin/del/<%= item._id %>">delete</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>

<% include ./footer %>
